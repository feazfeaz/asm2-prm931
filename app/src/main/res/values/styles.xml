<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="txt_header">
        <item name="android:textSize">@dimen/medium_size_txt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="main_txt_header" parent="txt_header">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">@dimen/large_space</item>
    </style>

    <style name="main_ic">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">22dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="detail_ic">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <style name="main_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/small_size_txt</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/red_sceme_6</item>
    </style>
</resources>
